@model Hospital.Models.ViewModels.DetailsVM

<div class="">       
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Docter.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning"> @((Model.Docter.Price).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePathDoctor@Model.Docter.Image" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush">@Model.Docter.Category.Name</span>
                                        
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Docter.Description) </p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" asp-route-id="@Model.Docter.Id" class="btn btn-info form-control btn-lg" style="height:50px;">Call him</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    <h3>Comments</h3>
    <a asp-controller="Home" asp-route-id="@Model.Docter.Id" asp-action="CreateComment" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Add comment</a>
   <div class="container">
    @try
    {
        if (@Model.Docter.Coments != null)
        {
            @foreach(var item in @Model.Docter.Coments)
            {
            <figure class="text-center">
              <blockquote class="blockquote">
                <p>@item</p>
              </blockquote>
              
            </figure>
       
            }
        }
        else
        {
            <h3>No Comments</h3>
        }

    }
    catch
    {
        <h2>No Comments</h2>
    }
    </div>




</div>

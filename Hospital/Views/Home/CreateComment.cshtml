@model Hospital.Models.Docter


<form method="post" asp-action="CreateComent">
    <input asp-for="Id" hidden />
    <div class="border p-3">
       
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Coments"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Coments" class="form-control" />
                        <span asp-validation-for="Coments" class="text-danger"></span>
                    </div>

                </div>
              
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>                       
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>